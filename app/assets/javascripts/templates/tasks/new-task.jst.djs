<div class="task paused minimized" data-behavior="task">
  <header>
    <i class="icon-status task-status"></i>
    <h3 class="task-title"
        data-behavior="editable"
        data-name="name">{{= it.name}}</h3>
    <time class="time-spent">00:00:00</time>
  </header>
  <p class="task-description"
     data-behavior="markdown-editable"
     data-element="textarea"
     data-name="description">Your description here ...
  </p>
</div>
