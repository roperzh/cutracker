<div class="dashboard">
  <section class="fixed-top horizontal-menu">
    <ul class="horizontal-menu-list">
      <li class="dropdown menu-item" data-behavior="dropdown">
        <h3 class="dropdown-title">Jan Losert</h3>
        <a href="#" data-behavior="logout">Logout</a>
        <i class="icon-arrow-down dropdown-toggle"></i>
        <ul class="dropdown-items">
          <li class="item"><a href="#">Item</a></li>
        </ul>
      </li>
    </ul>
  </section>

  <section class="fixed-left vertical-menu">
    <header class="menu-header">
      <h3 class="title">Dashboard</h2>
    </header>
    <nav class="multi-menu" role="navigation">
      <h4 class="single-menu-title">Menu Title</h4>
      <ul class="single-menu">
        <li class="single-menu-item">
          <a href="#">Menu Item</a>
          <span class="numeric-label"><%= (Random.rand * 100).to_i %></span>
        </li>
      </ul>
    </nav>
  </section>

  <div id="content-container">
    <div class="grid full-height">
      <div class="col-1-4 chat-box">
        <header class="small menu-header">
          <h3 class="title">Team Chat</h3>
          <i class="icon-arrow-down"></i>
        </header>
        <ul class="messages-list">
            <li class="message">
            </li>
        </ul>
      </div>
      <div class="col-3-4 task-box">
        <header class="small menu-header">
          <h3 class="title">Tasks</h3>
          <i class="icon-arrow-down"></i>
        </header>
        <ul class="tasks-list">
          <% tasks.each do |task| %>
            <li class="task paused"
                data-behavior="task"
                data-id="<%= task.id %>">
              <header>
                <i class="icon-status task-status"></i>
                <h3 class="task-title"
                    data-behavior="editable"
                    data-name="name"><%= task.name %>
                </h3>
                <time class="time-spent"><%= task.duration %></time>
                <ul class="tag-list">
                  <% task.tags.each do |tag| %>
                    <li class="blue tag"><%= tag %></li>
                  <% end %>
                </ul>
              </header>
              <p class="task-description"
                 data-behavior="markdown-editable"
                 data-element="textarea"
                 data-name="description"><%= task.description %>
              </p>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
